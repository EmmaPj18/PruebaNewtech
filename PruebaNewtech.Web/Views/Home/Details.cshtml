@model BooksAuthorViewModel
@section Styles {
    <style type="text/css">
        .control-label {
            font-weight: bold;
        }
    </style>
}

<h1>Book Id #@Model.Book.ID</h1>
<div class="row h-100">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Book.Title" class="control-label"></label>
            <span>@Model.Book.Title</span>
        </div>
        <div class="form-group">
            <label asp-for="Book.Description" class="control-label"></label>
            <span>@Model.Book.Description</span>
        </div>
        <div class="form-group">
            <label asp-for="Book.PageCount" class="control-label"></label>
            <span>@Model.Book.PageCount</span>
        </div>
        <div class="form-group">
            <label asp-for="Book.PublishDate" class="control-label"></label>
            <span>@Model.Book.PublishDate</span>
        </div>
        <div class="form-group">
            <label asp-for="Book.Excerpt" class="control-label"></label>
            <p>@Model.Book.Excerpt</p>
        </div>
        <div class="form-group">
            <label class="control-label">Authors</label>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Author)
                    {
                        <tr>
                            <td>@($"{item.FirstName} {item.LastName}")</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" asp-action="Index">Go back</a>
    </div>
</div>